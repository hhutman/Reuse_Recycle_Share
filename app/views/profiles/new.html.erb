<div class="container">

  <div class = "row">

   <div class="photos col-md-4">
    <div class="col-md-12">
      <center><%=image_tag "service.jpeg", :style=>"margin-left: 15%; margin-top: 80px;"%>
    </div>

    <div class="col-md-12">
      <center><%=image_tag "Recycle_resize.svg .png", :style=>"margin-top: 15%; margin-left:15%; width:220px;" %>
    </div>

    <div class="col-md-12">
      <center><%=image_tag "good.png", :style=>"margin-top: 12%; margin-left:10%;"%>
    </div>
  </div>


  <div class="profiles_new col-md-8">
    <header id="sub-title" style="color:black">Cup Of Sugar</header>
    <div class="profile_subtitle">Reuse, Recycle, Community List</div></br>


    <div class="make-profile">
      <h5 style="text-align:center">Create your profile</h5>
    <%= form_with model: @profile do |f| %>
    <div>
      <%= f.label 'First Name'%>
      <%= f.text_field :first_name %>
    </div>
  <div>
    <%= f.label 'Last Name'%>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label 'Address'%>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label 'Picture Id'%>
    <%= f.file_field :license %>
  </div>
  <div>
    <%= f.label 'Utility Bill'%>
    <%= f.file_field :bill %>
  </div>
  <div>
    <%= f.label 'Profile Pic'%>
    <%= f.file_field :pic %>
  </div>
  <div>
    <%= f.label 'Building'%>
    <%= f.collection_select(:building_id, @buildings, :id, :address, :include_blank => "Select your building") %>
  </div>
  <%= f.submit 'Create Profile!', class: "login-button" %>
<% end %>
</div>
</div>
</div>
</div>
